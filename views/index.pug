extends layout


block content
  section.jumbotron.text-center
    .container
      h1 #{title}
      p.lead.text-muted
        | Scouts Sint-Hubertus organiseert een grootschalige pasta actie! Neem een kijkje op de site en ontdek ons assortiment, bestellen kan nog tot 25 december!
      p = data.order_count

  ul.list-group
    li.list-group-item
      h3= data.event.title
      p= data.event.description
      p.text-muted= data.event.due_back_formatted
  .countContainer
    h3 Totaal aantal bestellingen momenteel
    p= data.order_count

  div.totalContainer
    div.facebookContainer
      h3 Neem een kijkje op onze facebook pagina!
      #fb-root
      iframe(src='https://www.facebook.com/plugins/page.php?href=https%3A%2F%2Fwww.facebook.com%2Fscoutsengidsensinthubertus&tabs=timeline&width=340&height=500&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true&appId' width='300' height='400' style='border:none;overflow:hidden' scrolling='no' frameborder='0' allowfullscreen='true' allow='autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share')
    
    div.youtubeContainer
      h3 Geniet van deze Italiaanse muziek bij het eten van je pasta
      iframe(width="75%" height='315' src='https://www.youtube.com/embed/rJhot6-27MA' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen='')
  
 
 
 
  style(type="text/css").
        .facebookContainer {
            border: 1px solid grey;
            border-radius:15px;
            padding:2%;
            width : 50%;
            float: left;
            height: 50%;
        }
        .youtubeContainer {
            border: 1px solid grey;
            border-radius:15px;
            padding:2%;
            width : 50%;
            float: right;
            height: 50%;
        }
        